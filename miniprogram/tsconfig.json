{
  "compilerOptions": {
    "module": "ES6",
    "target": "es6",
    "noImplicitReturns": true,
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strictNullChecks":false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "typeRoots": [
      "./typings"
    ],
    "lib": [
      "es2015"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
